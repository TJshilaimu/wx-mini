.hot{
  margin-top:20rpx;
  width:100%;
  background-color: #fff;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.hot-text{
  position: relative;
  font-size:44rpx;
  font-weight: bold;
margin-top:10rpx;
margin-bottom: 10rpx;
}
.hot-text::before{
  content:'';
  display: block;
  width:120rpx;
  height:4rpx;
  background-color: #000;
  position:absolute;
  top:48%;
  left:-80%
  
}
.hot-text::after{
  content:'';
  display: block;
  width:120rpx;
  height:4rpx;
  background-color: #000;
  position:absolute;
  top:48%;
  right:-80%
  
}

.hot image{
  width:95%;
}

.recommend{
  border-top:2rpx solid #555;
  width:100%
}
